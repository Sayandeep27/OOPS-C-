

#include <bits/stdc++.h>
using namespace std;


class Fruit{
 
 public:
     
     string name;
     string color;
    
    
    
};


int main()
{
   
   Fruit mango;
   
   mango.name="Mango";
   mango.color="Yellow";
   
   cout<<mango.name<<" "<<mango.color<<endl;
   
   
   
   Fruit *apple=new Fruit();
   
   apple->name="Apple";
   apple->color="Red";
   
   cout<<apple->name<<" "<<apple->color<<endl;
   
   

    return 0;
}
